<h1>Edit my personal details</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :about %>
	<%= f.text_field :about %>
	<%= f.label :phone %>
	<%= f.number_field :phone %>
	<%= f.label :address %>
	<%= f.text_field :address %>
	<%= f.submit "Save changes" %>
<% end %>
<p class="sensitive-change"><%= link_to "Change Password or Email", edit_user_registration_path %></p>
<%= link_to "Back to dashboard", user_path(current_user) %>
