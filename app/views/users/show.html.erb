<h2>Welcome <%= @user.name.capitalize %></h2>
<p>You have <strong> <%= @user.minutes %> minutes</strong>
</p>
<h1>Dashboard</h1>


<div class="container show-user-container">
	<div class="row">
		<div class="col-md-6">
			<div class="show-user-row">
					<h1 class="show-user-header"> RECEIVED </h1> 
				    <div class="pending-to-accept show-drop" >
						<h1 class="toggle"> To Accept </h1>
							<% @transaction_received.each do |transaction| %>
							<% if transaction.completed == false %>
								<p class="drop-show-p"> 
									From user: <%= User.find(transaction.creator_id).name.capitalize %>, transaction ID: <%= transaction.id %></p>
									  	<%= link_to "Accept Transaction", edit_user_skill_transaction_path(transaction.user_id, transaction.skill_id,transaction), class: "drop-show-p" %>
									    
								  <% end %>
							<% end %>
					</div>
					<div class="pending-to-rate show-drop">
						<h1 class="toggle"> To Rate </h1>
						<% @transaction_created.each do |transaction| %>
						  	<% if transaction.completed && transaction.rated == false %>
								<p class="drop-show-p">With user: <%= User.find(transaction.user_id).name.capitalize %>, ID: <%= transaction.user_id %></p>
								
								<%= link_to "Rate this Transaction", edit_user_skill_transaction_path(transaction.creator_id, transaction.skill_id,transaction), class: "drop-show-p" %>
								
		    					
						    <% end %>
						<% end %>
					</div>
			</div>
			
			
			<div class="show-user-row">
					<h1 class="show-user-header"> SENT </h1>
							<div class="awaiting-to-accept show-drop">
								<h1 class="toggle"> Not accepted</h1>
								<% if @any_created_transaction_pending %>
									<% @transaction_created.each do |transaction| %>
											<% if !transaction.completed %>
											<p class="drop-show-p">Waiting for: <%= User.find(transaction.user_id).name.capitalize %> to accept, 
											    Transaction ID: <%= transaction.id %></p>
											<% end %> 
										
									<% end %>
								<% end %>
							</div>
							<div class="awaiting-to-rate show-drop">
								<h1 class="toggle"> Not Rated Yet </h1>
								<% @transaction_completed.each do |transaction| %>
									<% unless transaction.rated %>
									    <p class="drop-show-p">From altruist: <%= User.find(transaction.creator_id).name.capitalize %>, ID:<%= transaction.creator_id %>, transaction ID: Transaction: <%= transaction.id %></p>
									  <% end %>
								<% end %>
							</div>
						</div>	
			</div>

		<div class="col-md-6">
			<div class="show-user-row">
				<h1> Calendar </h1>
			</div>
			<div class="show-user-row">
				<h1> Stats </h1>
			</div>
		</div>
	</div>
</div>















<h1> My Rated Transactions </h1>
<% @transaction_created.each do |transaction| %>
  <% if transaction.rated %>
	<p>With user: <%= User.find(transaction.user_id).name.capitalize %>, ID: <%= transaction.user_id %>, Your rating: <%= transaction.rating %></p>
  <% end %>
<% end %>




<p><%= link_to "Edit my personal information", edit_user_path(@user) %></p>
<p><%= link_to "Find an altruits", users_path %></p>
<p><%= link_to "Change Password", edit_user_registration_path %></p>
<p><%= link_to "My Skills", user_skills_path(@user) %></p>


